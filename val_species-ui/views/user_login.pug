extends layout

block content

  h3= title

  form(method='POST' action=`${post_action || '/user/login'}`)
    div.form-group
      div(class='row')
        div(class='col-sm-4')
          table(class='table')
            tr
              td Username
              td
                input#username.form-control(type='text', name='username' value=user.username)
            tr
              td Password
              td
                input#password.form-control(type='password', name='password' value=user.password)

    button.btn.btn-primary(type='submit') Login
    a(href=`/`)
      button.btn(type='button') Cancel
